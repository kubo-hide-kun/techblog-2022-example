{
  "name": "project-root",
  "version": "0.0.0",
  "main": "index.js",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev:app": "npm run dev -w sample-app",
    "build": "turbo run build",
    "fix:all": "run-s lint:fix format:fix type-check",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --check \"**/*.{ts,tsx,md}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,md}\"",
    "type-check": "turbo run type-check",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx}": [
      "run-s lint:fix format:fix type-check"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "commitlint-plugin-scope-empty-exceptions": "^1.1.0",
    "commitlint-plugin-workspace-scopes": "^1.1.0",
    "conventional-changelog-cli": "^2.2.2",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "turbo": "^1.6.3",
    "typescript": "^4.7.4"
  }
}
